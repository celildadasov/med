
@{
    ViewBag.Title = "Index";
}
<div id="contact">
    <div class="innerBanner">
        <img src="/Content/img/contact-us.jpg" class="cover_photo" alt="">
        <!--container-->
        <div class="container">
            <!--row-->
            <div class="row">
                <h2>contact us</h2>
            </div>
            <!--/row-->
        </div>
        <!--/container-->
    </div>
    <!--firstSection input və xəritə hissəsi-->
    <div class="firstSection sections">
        <!--container-->
        <div class="container">
            <!--row-->
            <div class="row">
                <!--contact-->
                <div class="col-sm-5 contact">
                    <!--form-->
                    <form class="maForm" method="post" action="/Contact/Index">
                        <h2 class="tittle"><span>send us</span>message</h2>
                        <input type="text" class="maInput" name="Name" placeholder="Name*">
                        <input type="text" class="maInput" name="Phone" placeholder="Phone*">
                        <input type="text" class="maInput"  name="Email" placeholder="Email*">
                        <textarea class="maTArea" name="Comment" placeholder="Comment*" id="" cols="30" rows="10"></textarea>
                        <!--maNotification button'a cliсk etdikdə bildiriş üçün-->
                        <div class="maNotification">
                            <p></p>
                        </div>
                        <!--/maNotification-->
                        <button type="submit" onclick="sendContact(3)"> submit   </button>
                    </form>
                    <!--/form-->
                </div>
                <!--/contact-->
                <!--map-->
                <div class="col-sm-6 map">
                    <h2 class="tittle"><span>Our</span>location</h2>
                    <!--map-cov-->
                    <div class="map-cov">
                        <iframe class="m5" src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d160843.97426970862!2d6.96732235!3d50.957244949999996!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sin!4v1432776491523" width="100%" height="450" frameborder="0"></iframe>
                    </div>
                    <!--/map-cov-->
                    <!--ids-->
                    <div class="col-lg-5 col-md-6 ids">
                        <!--h2-->
                        <h2 class="location">
                            Health Center Name Here <span>Address line number</span>
                            <span>Place Po. 885</span>
                        </h2>
                        <!--/h2-->
                    </div>
                    <!--/ids-->
                    <!--ids-->
                    <div class="col-lg-4 col-md-6 ids">
                        <!--h2-->
                        <h2 class="message">
                            info@healthplus.com
                            <span>career@healthplus.cm</span>
                        </h2>
                        <!--/h2-->
                    </div>
                    <!--/ids-->
                    <!--ids-->
                    <div class="col-lg-3 col-md-6 ids">
                        <!--h2-->
                        <h2 class="phone">
                            +225 48566 885
                            <span>9965 6662 333</span>
                        </h2>
                        <!--/h2-->
                    </div>
                    <!--/ids-->

                </div>
                <!--/map-->

            </div>
            <!--/row-->
        </div>
        <!--/container-->
    </div>
    <!--firstSection-->
</div>

