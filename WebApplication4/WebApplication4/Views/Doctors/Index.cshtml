@{ ViewBag.Title = "Index"; }
@using WebApplication4.Models;
<div id="doctors">
    <!--firstSection-->
    <div class="firstSection sections">
        <!--container-->
        <div class="container">
            <!--row-->
            <div class="row">
                <!--jst-cov-->
                <div class="jst-cov">
                    <!--col-sm-6-->
                    <div class="col-sm-6">
                        <!--tittle-->
                        <h2 class="tittle">
                            <span>
                                Met Our
                            </span> Experts
                        </h2>
                        <!--/tittle-->
                    </div>
                    <!--/col-sm-6-->
                </div>
                <!--/jst-cov-->
                <!--filter-->
                <div class="col-md-6 col-lg-6 filter">
                    <button type="button">Filter</button>
                    <!--select-->
                    <div class="select"  onclick="selectDownFunction()">
                        <a class="selectDown"></a>
                        <a class="sbSelect">Select Departments</a>
                        <!--ul-->
                        <ul class="selectOptions close">
                            @{
                                foreach (departmentCountry item in ViewBag.Ibrahim)
                                {
                                    <li><a onclick="selectFunction(@item.id,this)">@item.country_name</a></li>

                                }
                            }
                        </ul>
                        <!--/ul-->
                    </div>
                    <!--/select-->
                </div>
                <!--/filter-->
                <!--doctors-->
                <div class="col-sm-12 doctors">



                    @{
                                    int i = 0;
                                    foreach (Doctor item in Model)
                                    {
                            <div class="col-sm-3 doc">
                                if(i==0){
                                    <div class="doctor active">
                                    @if(item.image==null){
                                    <img src="">
                                    }
                                    else{
                                    <img src="@item.image">
                                    }
                                    <div class="social-net">
                                        @if (item.facebook_adress == null)
                            {
                                            <a class="face-d"></a>
                                        }

                                        else
                                        {
                                            <a class="face-d" href="@item.facebook_adress"></a>
                                        }


                                        @if (item.twitter_adress == null)
                        {
                                            <a class="twitt-d"></a>
                                        }
                                        else
                                        {
                                            <a class="twitt-d" href="@item.twitter_adress"></a>
                                        }
                                        @if (item.google_adress == null)
                        {
                                            <a class="google-d"></a>
                                        }
                                        else
                                        {
                                            <a class="google-d" href="@item.google_adress"></a>
                                        }

                                    </div>
                                    <h2>DR. @item.name @item.surname<span>@item.speciality</span></h2>
                                </div>
                                }

                                else{
                                    
                                <div class="doctor">
                                    @if (item.image == null)
                        {
                                        <img src="">
                                    }
                                    else
                                    {
                                        <img src="@item.image">
                                    }
                                    <div class="social-net">
                                        @if (item.facebook_adress == null)
                        {
                                            <a class="face-d"></a>
                                        }

                                        else
                                        {
                                            <a class="face-d" href="@item.facebook_adress"></a>
                                        }

                                        @if (item.twitter_adress == null)
                        {
                                            <a class="twitt-d"></a>
                                        }
                                        else
                                        {
                                            <a class="twitt-d" href="@item.twitter_adress"></a>
                                        }
                                        @if (item.google_adress == null)
                        {
                                            <a class="google-d"></a>
                                        }
                                        else
                                        {
                                            <a class="google-d" href="@item.google_adress"></a>
                                        }

                                    </div>
                                    <h2>DR. @item.name @item.surname<span>@item.speciality</span></h2>
                                </div>
                                
                                }
                            </div>
                            i++;
                        }
                    }
                    
                    
                </div>
                <!--/doctors-->
            </div>
            <!--/row-->
        </div>
        <!--/container-->
    </div>
    <!--/firstSection-->
</div>


